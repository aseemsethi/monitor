#!/bin/bash
i=0
colors=( blue green yellow orange )
for var in "$@"
do
  useColor=${colors[i]}
  i=$(( $i+1 ))
  i=$(( $i%${#colors[@]} ))
  if [ -n "$var" ]
  then
    echo "Log file for $var"
    xterm -bg ${colors[i]} -T "SSL STATS $var" -e "tail -f /var/monT/$var/ssl_stats"&
    xterm -bg ${colors[i]} -T "SSL PERF STATS $var" -e "tail -f /var/monT/$var/ssl_perf_stats"&
  fi
done
