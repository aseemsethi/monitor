#!/bin/bash
i=0
colors=( blue green yellow orange )
for var in "$@"
do
  useColor=${colors[i]}
  i=$(( $i+1 ))
  i=$(( $i%${#colors[@]} ))
  if [ -n "$var" ]
  then
    echo "Log file for $var"
    xterm -bg ${colors[i]} -T "PING $var" -e "tail -f /var/monT/$var/ping_logs"&
    xterm -bg ${colors[i]} -T "SSL $var" -e "tail -f /var/monT/$var/ssl_logs"&
    xterm -bg ${colors[i]} -T "CUST $var" -e "tail -f /var/monT/$var/cust_logs"&
  fi
done
